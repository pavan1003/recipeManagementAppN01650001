{
    "Title": "Apple Pie",
    "Description": "Classic apple pie with a flaky crust.",
    "Category": "Dessert",
    "CookingTime": 90,
    "Ingredients": [
        {
            "IngredientName": "Apples",
            "IngredientQuantity": 6,
            "IngredientUnit": "pieces"
        },
        {
            "IngredientName": "Sugar",
            "IngredientQuantity": 0.75,
            "IngredientUnit": "cup"
        },
        {
            "IngredientName": "Cinnamon",
            "IngredientQuantity": 1,
            "IngredientUnit": "teaspoon"
        },
        {
            "IngredientName": "Pie Crusts",
            "IngredientQuantity": 2,
            "IngredientUnit": "pieces"
        },
        {
            "IngredientName": "Butter",
            "IngredientQuantity": 2,
            "IngredientUnit": "tablespoons"
        },
        {
            "IngredientName": "Flour",
            "IngredientQuantity": 2,
            "IngredientUnit": "tablespoons"
        }
    ],
    "Instructions": [
        {
            "Description": "Preheat the oven to 425°F.",
            "StepNumber": 1
        },
        {
            "Description": "Peel, core, and slice the apples.",
            "StepNumber": 2
        },
        {
            "Description": "Mix apples with sugar, cinnamon, and flour.",
            "StepNumber": 3
        },
        {
            "Description": "Place one pie crust in a pie dish.",
            "StepNumber": 4
        },
        {
            "Description": "Fill with apple mixture and dot with butter.",
            "StepNumber": 5
        },
        {
            "Description": "Cover with the second pie crust and seal edges.",
            "StepNumber": 6
        },
        {
            "Description": "Cut slits in the top crust.",
            "StepNumber": 7
        },
        {
            "Description": "Bake for 45-50 minutes until golden brown.",
            "StepNumber": 8
        }
    ]
